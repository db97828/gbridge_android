<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="#1C1C1C"
    tools:context=".DetailActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="프로그램 소개 및 트레일러"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_margin="20dp"
        android:id="@+id/scroll_view_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.google.android.youtube.player.YouTubePlayerView>
            <ImageView
                android:id="@+id/iv_poster_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:textColor="#ED3E3E"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_original_name"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F16767"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_first_air_date"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_overview_tv"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="비슷한 TV 프로그램"
                android:textSize="10sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_tvs"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>